{
  "name": "checklist-work",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "open": "wait-on http://localhost:3000",
    "lint:frontend": "cd frontend && yarn lint --fix",
    "lint:backend": "cd backend && yarn lint --fix",
    "lint": "concurrently --kill-others-on-fail --names \"express,react\" \"yarn lint:backend\" \"yarn lint:frontend\"",
    "react": "cd frontend && yarn dev",
    "express": "cd backend && yarn dev",
    "dev": "concurrently --kill-others-on-fail --names \"express,react,open\" \"yarn express\" \"yarn react\" \"yarn open\""
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.1"
  }
}
